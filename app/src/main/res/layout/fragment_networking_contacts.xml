<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.networking.NetworkingContactFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contact_us_hubs_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_explore_our_networks_label" />

        <TextView
            android:id="@+id/contact_us_get_in_touch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Get in Touch"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_hubs_recyclerview" />

        <TextView
            android:id="@+id/contact_us_explore_our_networks_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Explore Our Networks"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/contact_us_get_in_touch_view"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/oboshor"
            app:layout_constraintEnd_toEndOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_get_in_touch_label" />

        <View
            android:id="@+id/contact_us_explore_our_networks_view"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/oboshor"
            app:layout_constraintEnd_toEndOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_explore_our_networks_label" />

        <TextView
            android:id="@+id/contact_us_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="Name"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_get_in_touch_view" />

        <EditText
            android:id="@+id/contact_us_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Your Name"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_name_label" />

        <TextView
            android:id="@+id/contact_us_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="Email"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_name" />

        <EditText
            android:id="@+id/contact_us_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email_label" />

        <TextView
            android:id="@+id/contact_us_email_subject_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="Subject"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email" />

        <EditText
            android:id="@+id/contact_us_email_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:hint="Your Subject"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email_subject_label" />

        <TextView
            android:id="@+id/contact_us_email_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="Message"
            android:textColor="@color/oboshor"
            app:layout_constraintStart_toStartOf="@+id/contact_us_get_in_touch_label"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email_subject" />

        <EditText
            android:id="@+id/contact_us_email_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/open_sans"
            android:gravity="start"
            android:hint="Your Message"
            android:inputType="textEmailAddress"
            android:minHeight="100dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email_message_label" />

        <Button
            android:id="@+id/contact_us_send_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/send"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_email_message"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>