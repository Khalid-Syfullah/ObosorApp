<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/oboshor"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/recyclerview_notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/open_sans"
            android:text="All Your Orders"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recyclerview_notification_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="normal" />

        <ImageView
            android:id="@+id/recyclerview_notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bell"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerview_notification_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recyclerview_notification_title"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/recyclerview_notification_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Smileyâ€™s Store marked your order #1982984 as shipped."
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/recyclerview_notification_title"
            app:layout_constraintStart_toStartOf="@+id/recyclerview_notification_title"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_notification_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>